<h1>拠点追加</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @site, local: true) do |f| %>
      
      <%= f.label :site_number, class: "label-site" %>
      <%= f.text_field :site_number, class: "form-control" %>
      
      <%= f.label :site_name, class: "label-site" %>
      <%= f.text_field :site_name, class: "form-control" %>
      
      <%= f.label :site_status, class: "label-site" %>
      <%= f.text_field :site_status, class: "form-control" %>
      
      <%= f.submit "拠点追加", class: "btn btn-primary btn-block" %>
    <% end %>
  </div>
</div>