<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <td class="btn-users-show">
        <%= link_to "←", user_path(date: @first_day.prev_month), class: "btn btn-primary" %>
        <%= l(@first_day, format: :middle) %>
        時間管理表
        <%= link_to "→︎", user_path(date: @first_day.next_month), class: "btn btn-primary" %>
      </td>
      <td>
        指定勤務開始時間　<%= format_time(@user.designated_work_start_time) %><br>
        指定勤務終了時間　<%= format_time(@user.designated_work_end_time) %> 
      </td>
      <td colspan="3">基本時間：<%= format_basic_info(@user.basic_time) %></td>
      <td>月初日：<%= l(@first_day, format: :short) %></td>
    </tr>
    
    <tr>
      <td>所属：<%= @user.affiliation.present? ? @user.affiliation : "未所属" %></td>
      <td>名前：<%= @user.name %></td>
      <td>コード</td>
      <td><%= @user.employee_number %></td>
      <td>出勤日数：<%= @worked_sum %>日</td>
      <td>締め：<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>

<% if @user.superior %>
  <div>
    <%= link_to_if @notice_superior.present?, "【所属長承認申請のお知らせ】", '#', remote: true, class: "message_alert" %>
    <% if @alert.present? %>
      <font class="<%= "#{apply_message}"%>"><%= "#{@notice_superior_sum}件の通知があります" %></font>
    <% end %>
  </div> 
  
  <div>
    <%= link_to_if @alert.present?, "【勤怠変更申請のお知らせ】", '#', remote: true, class: "message_alert" %>
    <% if @alert.present? %>
      <font class="<%= "#{apply_message}"%>"><%= "#{@notice_sum}件の通知があります" %></font>
    <% end %>
  </div> 
  
  <div>
    <%= link_to_if @notice.present?, "【残業申請のお知らせ】", attendances_edit_overtime_message_user_path(@user), remote: true, class: "message_alert" %>
    <% if @notice.present? %>
      <font class="<%= "#{apply_message}"%>"><%= "#{@notice_sum}件の通知があります" %></font>
    <% end %>
  </div> 

  <div class="btn-users-shows">
    <%= link_to "勤怠を編集", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-sm btn-primary" %>
    <%= link_to "CSV出力", '#', class: "btn btn-sm btn-primary" %>
  </div>
  <div class="btn-users-get">
    <%= link_to "勤怠修正ログ(承認済)", '#', class: "btn btn-primary" %>
  </div>
<% end %>

<div>
  <table class="table table-bordered table-condensed table-hover" id="table-attendances">
    <thead>
      <tr>
        <th rowspan="3">残業申請</th>
        <th rowspan="3">日付</th>
        <th rowspan="3">曜日</th>
        <th colspan="8">【実績】</th>
        <th colspan="5">所定外勤務</th>
      </tr>
      <tr>
        <th colspan="3">出社</th>
        <th colspan="3">退社</th>
        <th rowspan="2">在社時間</th>
        <th rowspan="2">備考</th>
        <th colspan="2">終了予定時間</th>
        <th rowspan="2">時間外時間</th>
        <th rowspan="2">業務処理内容</th>
        <th rowspan="2">指示者確認㊞</th>
      </tr>
      <tr>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
      </tr>
    </thead>
    
    <tbody>
      <% @attendances.each do |day| %>
        <tr>
          <td><%= link_to "残業申請", edit_overtime_motion_user_attendance_path(day.user_id, day.id), remote: true, class: "btn btn-primary" %></td>
          <td><%= l(day.worked_on, format: :short) %></td>
          <td class='<%= "wday#{day.worked_on.wday}"%>'><%= $days_of_the_week[day.worked_on.wday] %></td>
          <td><%= l(day.started_at, format: :hour) if day.started_at.present? %></td>
          <td><%= l(day.started_at, format: :min) if day.started_at.present? %></td>
          <td>
            <% if btn_text = attendance_state(day) %>
              <%= link_to "#{btn_text}", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
            <% end %>
          </td>
          <td><%= l(day.finished_at, format: :hour) if day.finished_at.present? %></td>
          <td><%= l(day.finished_at, format: :min) if day.finished_at.present? %></td>
          <td>
            <% if btn_text = quitting_state(day) %>
              <%= link_to "#{btn_text}", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
            <% end %>
          </td>
          <td>
            <% if day.started_at.present? && day.finished_at.present? %>
              <%= str_times = working_times(day.started_at, day.finished_at) %>
              <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
            <% end %>
          </td>
          <td><%= day.note %></td>
          <td><%= l(day.finish_overtime, format: :hour) if day.finish_overtime.present?  %></td>
          <td><%= l(day.finish_overtime, format: :min) if day.finish_overtime.present? %></td>
          <td><%= adjustment_out_of_time(day, @user) %></td>
          <td><%= day.operation %></td>
          <td><%= superior_mark_overtime(day) %></td>
        </tr>
      <% end %>
    </tbody>
    
    <tfoot>
      <tr>
        <td></td>
        <td colspan="2"></td>
        <td colspan="6"></td>
        <td>在社時間</td>
        <td colspan="5"></td>
        <td>
          <h6>所属長承認</h6>
          <%= form_with(model:@attendance, url: attendances_update_deano_motion_user_path(@user), local: true, method: :patch) do |f| %>
            <%= f.collection_select :superior_mark1, @superiors, :name, :name, { prompt: "選択してください" }, class: "form-control" %>
            <%= f.submit "申請", class: "btn btn-primary btn-block btn-att_app" %>
          <% end %>
        </td>
        
      </tr>
    </tfoot>
  </table>
</div>

